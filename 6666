#include <stdio.h>
int main()
{
	char str[]="3+4";
	int a=str[0]-'0';
	int b=str[2]-'0';
	int total = a + b;
	printf("total=%d\n",total);
	return 0;
}



#include <stdio.h>
#include <string.h>
int main()
{
	char str[]="1+2+2+1+2+5+4-1-3+4-8";
	int sum=str[0]-'0';
	for(int i=1;i<strlen(str);i=i++)
	{
		if(str[i]=='+')
		{
			int a=str[i+1]-'0';
		    sum=sum+a;
			i++;
		}
		else if(str[i]=='-')
		{
		    int b=str[i+1]-'0';
		    sum=sum-b;
			i++;
		}
	}
	printf("sum=%d\n",sum);
	return 0;
}


#include"stdio.h"
#include"string.h"
int main()
{
	char s1[100]="2*2/4*1/1*2*3/2";
	int i;
	int res=s1[0]-'0';
	for(i=1;i<=strlen(s1);i++)
	{
		if(s1[i]=='*') res*=s1[++i]-'0';
		else if(s1[i]=='/') res/=s1[++i]-'0';	
	}
	printf("结果为:\n");
	printf("%d \n",res); 
	return 0;
}


#include <stdio.h>
#include <string.h>
int main()
{
	char str[]="2*2/4*1/1*2*3/2";
	int sum=str[0]-'0';
	for(int i=1;i<strlen(str);i=i++)
	{
		if(str[i]=='*')
		{
			int a=str[i+1]-'0';
		    sum=sum*a;
			i++;
		}
		else if(str[i]=='/')
		{
		    int b=str[i+1]-'0';
		    sum=sum/b;
			i++;
		}
	}
	printf("sum=%d\n",sum);
	return 0;
}

